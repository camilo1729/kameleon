 nfs_partition_size: 128G
 nfs_partition: /dev/sda5
 nfs_export_file_system_type: ext4
 #
 #
 include_dir: /var/lib/kameleon/scripts
 #lustre_g5kutils_repository: http://oar.imag.fr/debian/lustre/
 #
 # Architecture
 arch: amd64
